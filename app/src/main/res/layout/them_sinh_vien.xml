<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="222dp"
        android:layout_height="113dp"
        android:layout_marginTop="64dp"
        android:text="Thông tin sinh ziên"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputNameSV"
        style="@style/NoUnderlineEditText"
        android:layout_width="wrap_content"
        android:layout_height="99px"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="inputNameSV"
        android:inputType="text"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/inputPhoneSV"
        style="@style/NoUnderlineEditText"
        android:layout_width="wrap_content"
        android:layout_height="99px"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="inputPhoneSV"
        android:inputType="text"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEmailSV" />

    <EditText
        android:id="@+id/inputSex"
        style="@style/NoUnderlineEditText"
        android:layout_width="wrap_content"
        android:layout_height="99px"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="inputSex"
        android:inputType="text"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputPhoneSV" />

    <EditText
        android:id="@+id/inputEmailSV"
        style="@style/NoUnderlineEditText"
        android:layout_width="wrap_content"
        android:layout_height="99px"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="inputEmailSV"
        android:inputType="text"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputNameSV" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputPhoneSV"
        app:layout_constraintVertical_bias="0.645" />

</androidx.constraintlayout.widget.ConstraintLayout>